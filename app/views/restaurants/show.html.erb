<h1>Restaurant: <%= @restaurant.name %></h1>

<ul>
  <li>Adress: <%= @restaurant.address %> </li>
  <li>Phone: <%= @restaurant.phone_number %> </li>
  <li>Category <%= @restaurant.category %> </li>
</ul>

<h2>Reviews:</h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      Content: <%= review.content %> | Rating: <%= review.rating %>
    </li>
  <% end %>
</ul>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-info" %>
<% end %>
